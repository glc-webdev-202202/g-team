<!DOCTYPE HTML>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>G-Team Stocks</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

</head>

<header> 
    <%- message %>
    <% if(!loggedin){%>
    <div class="container">
        <div class="row">
            <div class="col-md-8"></div>
            <div class="col-1"><a href="/g_stock">Main</a></div>
            <div class="col-1"><a href="/Forum">Forum</a></div>
            <div class="col-1"><a href="/register">Register</a></div>
            <div class="col-1"><a href="/login">Login</a></div> 
        </div>
    </div>
    <%} else {%>
    <div class="container">
        <div class="row">
            <div class="col-md-8"></div>
            <div class="col-1"><a href="/g_stock">Main</a></div>
            <div class="col-1"><a href="/Forum">Forum</a></div>
            <div class="col-1"><a href="/profile">Profile</a></div>
            <div class="col-1"><a href="/logout">Logout</a></div> 
        </div>
    </div>
    <%} %>
</header>


<body>
    <div class="container">
        <h1><a href="/">Stocks</a></h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Start</th>
                    <th>High</th>
                    <th>Low</th>
                    <th>Volume</th>
                </tr>
            </thead>
            <tbody>
                <% for(const stock of stocks){ %> <!-- [const name].[*DATABASE COLUMN NAME*, not the name in index.ts] -->
                <tr>
                    <td><%= stock.stock_code %></td>
                    <td><%= stock.stock_name %></td>
                    <td><%= stock.stock_price %></td>
                    <td><%= stock.stock_start %></td>
                    <td><%= stock.stock_high %></td>
                    <td><%= stock.stock_low %></td>
                    <td><%= stock.stock_volume %></td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </div>