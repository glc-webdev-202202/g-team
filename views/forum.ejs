<!DOCTYPE HTML>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>G-Team Stocks</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

</head>

<header> 
    <%- message %>
    <% if(!loggedin){%>
    <div class="container">
        <div class="row">
            <div class="col-md-8"></div>
            <div class="col-1"><a href="/allstock_data">Main</a></div>
            <div class="col-1"><a href="/Forum">Forum</a></div>
            <div class="col-1"><a href="/register">Register</a></div>
            <div class="col-1"><a href="/login">Login</a></div> 
        </div>
    </div>
    <%} else {%>
    <div class="container">
        <div class="row">
            <div class="col-md-8"></div>
            <div class="col-1"><a href="/allstock_data">Main</a></div>
            <div class="col-1"><a href="/Forum">Forum</a></div>
            <div class="col-1"><a href="/profile">Profile</a></div>
            <div class="col-1"><a href="/logout">Logout</a></div> 
        </div>
    </div>
    <%} %>
</header>


<body>
    <div class="container">
        <h1><a href="/forum">Forum</a></h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Article Id</th>
                    <th>Title</th>
                    <th>Content</th>
                </tr>
            </thead>
            <tbody>
                <% for(const article of articles){ %> <!-- [const name].[*DATABASE COLUMN NAME*, not the name in index.ts] -->
                <tr>
                    <td><%= article.a_id %></td>
                    <td><%= article.a_title %></td>
                    <td><%= article.a_content %></td>
                </tr>
                <% } %>
            </tbody>
        </table>
        <form method="POST" action="/writePost">  
            <input type="text" name = "a_title">
            <input type="text" name = "a_content">
            <input type="checkbox" name = "a_secret">
            <button type="submit">submit</button>
        </form>
        
        <a href ="/myArticles">
            <button style="background-color:blue; color:aliceblue;border-radius:5px"> My Articles </button></a>
    </div>