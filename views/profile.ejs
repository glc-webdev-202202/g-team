<!DOCTYPE HTML>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

</head>

<header> 
    <%- message %>
    <% if(!loggedin){%>
    <div class="container">
        <div class="row">
            <div class="col-md-8"></div>
            <div class="col-1"><a href="/allstock_data">Main</a></div>
            <div class="col-1"><a href="/Forum">Forum</a></div>
            <div class="col-1"><a href="/register">Register</a></div>
            <div class="col-1"><a href="/login">Login</a></div> 
        </div>
    </div>
    <%} else {%>
    <div class="container">
        <div class="row">
            <div class="col-md-8"></div>
            <div class="col-1"><a href="/allstock_data">Main</a></div>
            <div class="col-1"><a href="/Forum">Forum</a></div>
            <div class="col-1"><a href="/profile">Profile</a></div>
            <div class="col-1"><a href="/logout">Logout</a></div> 
        </div>
    </div>
    <%} %>
</header>


<body>
    <div class="container">
        <h1><a href="/profile">Profile</a></h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>User ID</th>
                    <th>Password</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                <% for(const profile of profiles){ %> <!-- [const name].[*DATABASE COLUMN NAME*, not the name in index.ts] -->
                <tr>
                    <td><%= profile.uid %></td>
                    <td><%= profile.pw %></td>
                    <td><%= profile.firstname %></td>
                    <td><%= profile.lastname %></td>
                    <td><%= profile.email %></td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </div>